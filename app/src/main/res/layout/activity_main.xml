<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.deepakrattan.datetimepickerdemo.MainActivity">

    <Button
        android:id="@+id/btnShowDatePickerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show date Picker Dialog" />

    <Button
        android:id="@+id/btnShowTimePickerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Time Picker Dialog" />

</LinearLayout>
